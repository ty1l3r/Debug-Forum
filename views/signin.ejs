<%- include('header') %>

    <form id="form_signin" action="/forum/new_user" method="post">
        <div class="text-lowercase border rounded d-lg-flex justify-content-lg-center register-photo" data-bs-hover-animate="pulse">
            <div class="text-capitalize text-left text-success bg-success border rounded border-secondary shadow form-container">
                <form class="text-primary" method="post">
                    <h2 class="text-center"><strong>Create</strong> an account.</h2>

                    <div class="form-group pl-3 pr-3" name="username"><input class="form-control input_username " type="text" name="username" placeholder="Pseudo"></div>

                    <div class="form-group pl-3 pr-3"><input class="input_mail form-control" type="email" name="email" placeholder="Email"></div>

                    <div class="form-group pl-3 pr-3"><input class="input_mdp form-control" type="password" name="password" placeholder="Password"></div>

                    <div class="form-group pl-3 pr-3"><input class="input_vmdp form-control" type="password" name="vpassword" placeholder="Password (repeat)"></div>

                    <div class="form-group pl-3 pr-3">
                        <div class="form-check" style="color:white;"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree to the license terms.</label></div>
                    </div>

                    <div class="form-group pl-3 pr-3"><button class="btn btn-primary btn-block" type="submit" value="Inscription">Sign Up</button></div>

                    <a class="already pl-3 pr-3 mb-3" style="color:white" href="#">You already have an account? Login here.</a></form>
            </div>
        </div>
    </form>



